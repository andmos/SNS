#! /bin/bash 

echo "Har man ikke satt restriksjoner på prosesser en bruker kan kjøre,"
echo "Er man ikke beskyttet mot fork bombs."
echo "Det lages da prosess på prosess, helt til serveren dør."
echo "Noe som skjer om 10 sekunder:"

sleep 10

tmux new-session -d 'htop'
tmux split-window -v '/vagrant/bin/forkBomb'
#tmux split-window -h
tmux -2 attach-session -d  
