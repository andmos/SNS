#! /bin/bash

echo "

    M E N Y
    1. Start firewall  
    2. Start webserver  
    3. Start fail2ban 
    4. Send Mail
    5. Start Networkmonitor
    6. Start Webproxy
    7. Start VPN-Server
    8. Look at database
    ATTACK OPTIONS: 
    9. ForkBomb (exit with ctrl + c) 
    10. Portscan  
    11. NMAP - Analyse 
"
echo -n "Valg: "
read choise

case $choise in
    1) firewallSetup ;;
    2) sudo service apache2 restart ;; 
    3) sudo service fail2ban restart ;;  
    4) /vagrant/bin/mailSender ;; 
    5) /vagrant/bin/networkMonitoring ;; 
    6) /vagrant/bin/proxy ;;
    7) /vagrant/bin/vpn ;;  
    8) /vagrant/bin/showDatabase ;; 
    9) /vagrant/bin/forkBombMonitor ;;
    10) /vagrant/bin/portScan;;  
    11) /vagrant/bin/nmapAnalysis ;;
    *) echo "\"$choise\" not valid "; sleep 1 ;; 

esac 
