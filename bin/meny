#! /bin/bash

echo "

    M E N Y
    1. Install LAMP - pakke
    2. Restart apache  
    3. Start fail2ban 
    4.
    5.
"
echo -n "Valg: "
read choise

case $choise in
    1) /vagrant/freshInstallWeb.bash ;;
    2) sudo service apache2 restart ;; 
    3) sudo service fail2ban restart ;;  
    *) echo "\"$choise\" ikke gyldig "; sleep 1 ;; 

esac 
