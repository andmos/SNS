#! /bin/bash

echo "

    M E N Y
    1. Start firewall  
    2. Start apachemonitor  
    3. Start fail2ban 
    4. Send Mail
    5. Start Networkmonitor
    6. Start Webproxy
    7. Start VPN-Server
    8. Start RADIUS
    9. Look at database
    ATTACK OPTIONS: 
    10. ForkBomb (exit with ctrl + c) 
    11. Portscan  
    12. NMAP - Analyse 
"
echo -n "Valg: "
read choise

case $choise in
    1) firewallSetup ;;
    2) /vagrant/bin/apacheLogMonitor ;; 
    3) sudo service fail2ban restart ;;  
    4) /vagrant/bin/mailSender ;; 
    5) /vagrant/bin/networkMonitoring ;; 
    6) /vagrant/bin/proxy ;;
    7) /vagrant/bin/vpn ;;  
    8) /vagrant/bin/radius ;;
    9) /vagrant/bin/showDatabase ;; 
    10) /vagrant/bin/forkBombMonitor ;;
    11) /vagrant/bin/portScan;;  
    12) /vagrant/bin/nmapAnalysis ;;
    *) echo "\"$choise\" not valid "; sleep 1 ;; 

esac
