#! /bin/bash

echo "

    M E N Y
    1. Start brannmur  
    2. Start apache  
    3. Start fail2ban 
    4. Send Mail
    5. Start nettverksmonitor
    ANGREPSVALG: 
    6. ForkBomb (avslutt med ctrl + c) 
    7. Portscan  
    8. NMAP - Analyse 
"
echo -n "Valg: "
read choise

case $choise in
    1) firewallSetup ;;
    2) sudo service apache2 restart ;; 
    3) sudo service fail2ban restart ;;  
    4) /vagrant/bin/mailSender ;; 
    5) /vagrant/bin/networkMonitoring ;; 
    6) /vagrant/bin/forkBombMonitor ;;
    7) /vagrant/bin/portScan;;  
    8) /vagrant/bin/nmapAnalysis ;;
    *) echo "\"$choise\" ikke gyldig "; sleep 1 ;; 

esac 
