#! /bin/bash
if [ -z "$(pgrep openvpnas)" ]
    then
        sudo service openvpnasa start > /dev/null 
    else
        sudo service openvpnasa restart > /dev/null
fi

echo "Open in browser(use HTTPS) : https://`curl -s checkip.dyndns.com | grep -Eo "[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+"`:1886"
echo "Log in with users Kari or Ola, Password 'Passord'" 
