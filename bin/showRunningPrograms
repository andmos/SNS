#! /bin/bash 

RESTORE='\033[0m'

GREEN='\033[00;32m'
YELLOW='\033[00;33m'

programs="apache2 fail2ban postfix ufw squid3 openvpnas freeradius snort"

function isRunning(){
if [ -z "$(pgrep $1)" ]
    then
       echo -e "${YELLOW} $1 is NOT running."
    else 
        echo -e "${GREEN} $1 is RUNNING"
    fi 
}

for program in $programs
    do
        isRunning $program
    done
echo -en "${RESTORE}"
